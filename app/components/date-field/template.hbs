{{#basic-dropdown as |dropdown|}}
  <input
    type="text"
    id="ember-basic-dropdown-trigger-{{dropdown.uniqueId}}"
    onclick={{dropdown.actions.toggle}}
    value={{if selected (moment-format selected "YYYY-MM-DD")}}
    readonly
  >

  {{#dropdown.content class="datepicker-dropdown"}}
    {{#power-calendar class="datepicker"
      center=center
      selected=selected
      onSelect=(pipe-action
        (action change value="moment")
        dropdown.actions.close
      )
    as |calendar|}}
      {{calendar.nav}}
      {{calendar.days}}
    {{/power-calendar}}
  {{/dropdown.content}}
{{/basic-dropdown}}
