{{#if contribution}}
  {{#liquid-bind contribution use="toUp" as |contribution|}}
    {{party-popper}}
    {{#link-to "day" contribution.date}}
      Neuester Beitrag von {{contribution.user.name}}:
      {{contribution.title}}
    {{/link-to}}
    {{party-popper}}
  {{/liquid-bind}}
{{else}}
  {{party-popper class="invisible"}}
{{/if}}
